<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mango_two</item>
        <item name="colorPrimaryDark">@color/mango</item>
        <item name="colorAccent">@color/mango_two</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme" parent="Base.AlertDialog.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.ButtonBar.AlertDialog</item>
    </style>

    <style name="AlertDialog.AppCompat.MyTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.ButtonBar.AlertDialog</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
